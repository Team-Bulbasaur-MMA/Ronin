<!DOCTYPE html>
<html lang="en">

    <%- include('../layout/head', {users : users}) %>
    <%- include('../layout/header', {users : users}) %>

  <body class='dataBody'>
    <h1 class='title2'>My collections: </h1>
    
    <ul>
      <% data.foodData.forEach(food => { %>
        <div class='foodDiv'>
          <li class='foodList'>
            <h2><%= food.name %> </h2>
            <img src='<%= food.image_url %>' alt='' height="300px" width="300px">
            <h3>Price: <%= food.price %></h3>
            <h3><%= food.rating %> &#11088; </h3>
            <h3>Address: <%= food.address %></h3>
            <h3>Phone Number: <%= food.phone %></h3>
            <form action="/restaurants/<%= food.id %>?_method=DELETE" method="POST">
              <input name='user_name' type='hidden' value='<%= users %>'>
              <input class='button' type="submit" value="Delete">
            </form>
          </li>
        </div>
      <% }) %>
    </ul>


    <br>
    <h1 class='title2'><%= users %>'s watch-list: </h1>

    <ul>
      <% data.animeData.forEach(baka => { %>
        <div>
          <li class='favAnimeList'>
            <h2><%= baka.name %></h2>
            <img src='<%= baka.image_url %>' alt=''>
          </li>
          <form action='anime/<%= baka.id %>?_method=DELETE' method='POST'>
            <input name='user_name' type='hidden' value='<%= users %>'>
            <input class='button2' type='submit' value='Delete Character'>
          </form>
        </div>
      <% }) %>
    </ul>

